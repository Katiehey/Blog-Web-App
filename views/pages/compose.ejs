<div class="container">
    <div class="form-container">
        <div class="form-header">
            <h1 class="page-title">Create New Post</h1>
            <p class="page-subtitle">Share your thoughts with the world</p>
        </div>
        
        <form action="/submit" method="POST" class="post-form">
            <div class="form-group title">
                <label for="title">Post Title</label>
                <input type="text" id="title" name="title" placeholder="Catchy title here..." required>
            </div>
            
            <div class="form-group content">
                <label for="content">Your Story</label>
                <textarea id="content" name="content" placeholder="Start writing your amazing content here..." rows="12" required></textarea>
            </div>
            
            <div class="btn-group">
                <button type="submit" class="primary-btn">
                    <span class="btn-icon">üöÄ</span>
                    Publish Post
                </button>
                <a href="/" class="secondary-btn">
                    <span class="btn-icon">‚Üê</span>
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>